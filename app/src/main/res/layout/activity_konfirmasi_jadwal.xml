<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/background"
    tools:context=".ui.konfirmasi.KonfirmasiJadwal"
    android:background="@color/blue_medsch2">

    <ImageButton
        android:id="@+id/btn_back_konfirmasi"
        android:layout_width="60dp"
        android:layout_height="44dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_keyboard_backspace_40"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_header_konfirmasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_back_konfirmasi"
        android:text="Konfirmasi Jadwal"
        android:fontFamily="@font/sans"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/ll_daftar_dokter"
        android:layout_width="413dp"
        android:layout_height="710dp"
        android:background="@drawable/view_bg"
        android:gravity="bottom"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_header_konfirmasi">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_jadwal_dokter"
            android:layout_width="408dp"
            android:layout_height="685dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="70dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:scrollbars="vertical"
            tools:listitem="@layout/item_jadwal" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>